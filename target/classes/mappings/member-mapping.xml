<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="MemberDAO">
  	<insert id="insertMember">
  		insert into membertbl(userid,userpwd,username,addr,detailaddr)
  		values(#{userid},#{userpwd},#{username},
  		#{addr,jdbcType=NVARCHAR},#{detailaddr,jdbcType=NVARCHAR})
  	</insert>
  	<select id="selectMember" resultType="com.ezen.biz.dto.MemberVO">
  		select * from membertbl 
  		where userid=#{userid}
  		 and userpwd =#{userpwd}
  		 and  enabled='1'
  	</select>
  	<!-- 모든회원 조회 -->
  	<select id="selectMemberList" resultType="com.ezen.biz.dto.MemberVO">
  		select * from membertbl where enabled='1'
  	</select>
</mapper>